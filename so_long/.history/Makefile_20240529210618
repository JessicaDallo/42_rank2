#compiling variables#
CC = gcc
CFLAGS = -Wall -Wextra -Werror -Iminilibx-linux
MINILXFLAGS = -Lminilibx-linux -lmlx -lXext -lX11 -lm

#names 
NAME = fdf
SRC = fdf.c
OBJ = $(SRC:.c=.o)

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(CFLAGS) -o $(NAME) $(OBJ) $(MINILXFLAGS)

clean:
	rm -f $(OBJ)

fclean: clean
	rm -f $(NAME)

re: fclean all

.PHONY: all clean fclean re