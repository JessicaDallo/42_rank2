#Compiling Variables#
CC = gcc
CFLAGS = -Wall -Wextra -Werror -Iminilibx-linux
MINILXFLAGS = -Lminilibx-linux -lmlx -lXext -lX11 -lm

#Names#
NAME = fdf

#Library#
LIBFT = ./libft.a

#Sources#
SRC = main.c

OBJ = $(SRC:.c=.o)


##################### MAKEFILE RULES ##########################
all: $(LIBFT) $(NAME)

bonus: all $(BONUS) $(LIBFT)

clean:
	${MAKE} clean -C ./libft
	rm -f $(OBJ)

fclean: clean
	${MAKE} clean -C ./minilibx-linux
	${MAKE} fclean -C ./libft
	rm -f $(NAME)

re: fclean all

################ MAKING MAIN PROGRAM ##################################
$(NAME): $(OBJ)
	$(MAKE) -C ./minilibx-linux
	$(CC) $(CFLAGS) -o $(NAME) $(OBJ) -L./libft -lft $(MINILXFLAGS)

$(LIBFT):
	${MAKE} --no-print-directory -C ./libft
	
.PHONY: all clean fclean re