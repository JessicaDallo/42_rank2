#Compiling Variables#
CC = gcc
CFLAGS = -Wall -Wextra -Werror -Iminilibx-linux
MINILXFLAGS = -Lminilibx-linux -lmlx -lXext -lX11 -lm

#Names#
NAME = fdf

#Library#
LIBFT = ./libft/libft.a

#Sources#
SRC = main.c

OBJ = $(SRC:.c=.o)


##################### MAKEFILE RULES ##########################
all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(CFLAGS) -o $(NAME) $(OBJ) $(MINILXFLAGS)

clean:
	rm -f $(OBJ)

fclean: clean
	rm -f $(NAME)

re: fclean all

.PHONY: all clean fclean re