#Compiling Variables#
CC = cc
CFLAGS = -Wall -Wextra -Werror -Iminilibx-linux
MINILXFLAGS = -L ./minilibx-linux -lmlx -lXext -lX11 -lm -lbsd -no-pie

#Names#
NAME = fdf

#Library#
LIBFT = ./libft/libft.a
MINILX_DIR = ./minilibx-linux

#Sources#
SRC = main.c

OBJ = $(SRC:.c=.o)


##################### MAKEFILE RULES ##########################
all: $(LIBFT) $(MINILX_DIR)/libmlx.a $(NAME)

bonus: all $(BONUS) $(LIBFT)

clean:
	${MAKE} clean -C ./libft
	rm -rf $(OBJ)

fclean: clean
	${MAKE} clean -C ./minilibx-linux
	${MAKE} fclean -C ./libft
	rm -rf $(NAME)

re: fclean all

################ MAKING MAIN PROGRAM ##################################
$(NAME): $(OBJ)
	
	$(CC) $(CFLAGS) -o $(NAME) $(OBJ) -L./libft -lft $(MINILXFLAGS)

$(LIBFT):
	${MAKE} -C ./libft

$(MINILX_DIR)/libmlx.a:
	$(MAKE) -C $(MINILX_DIR)

.PHONY: all clean fclean re